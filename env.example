# MusicBrainz Docker Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# REPLICATION SETTINGS
# =============================================================================

# MetaBrainz Access Token for replication
# Get your token from: https://metabrainz.org/account/applications
# This is a 40-character token required for accessing MusicBrainz replication data
REPLICATION_ACCESS_TOKEN=

# =============================================================================
# DATABASE SETTINGS
# =============================================================================

# PostgreSQL Database Configuration
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_DB=musicbrainz_db
POSTGRES_USER=musicbrainz
POSTGRES_PASSWORD=musicbrainz

# =============================================================================
# REDIS SETTINGS
# =============================================================================

# Redis Configuration
REDIS_SERVER=redis
REDIS_PORT=6379

# =============================================================================
# MUSICBRAINZ SETTINGS
# =============================================================================

# MusicBrainz Base Download URL
MUSICBRAINZ_BASE_DOWNLOAD_URL=https://data.metabrainz.org/pub/musicbrainz

# =============================================================================
# STORAGE PATHS
# =============================================================================

# Host paths for data storage (adjust these to your system)
MUSICBRAINZ_DATA_PATH=/mnt/storage/musicbrainz-docker-arm/postgres-data
MUSICBRAINZ_DUMP_PATH=/mnt/storage/musicbrainz/dbdump

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# PostgreSQL Memory Settings
POSTGRES_SHARED_BUFFERS=512MB
POSTGRES_MAX_CONNECTIONS=50
POSTGRES_WORK_MEM=4MB

# Container Memory Limits (adjust for your system)
DB_MEMORY_LIMIT=1GB
DB_MEMORY_RESERVATION=512MB
REDIS_MEMORY_LIMIT=128MB
REDIS_MEMORY_RESERVATION=64MB
MUSICBRAINZ_MEMORY_LIMIT=256MB
MUSICBRAINZ_MEMORY_RESERVATION=128MB


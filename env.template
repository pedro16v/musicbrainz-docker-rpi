# MusicBrainz Replication Environment Configuration
# Copy this file to .env and modify as needed

# Database Configuration
POSTGRES_DB=musicbrainz_db
POSTGRES_USER=musicbrainz
POSTGRES_PASSWORD=musicbrainz
POSTGRES_HOST=db
POSTGRES_PORT=5432

# External Port Configuration (to avoid conflicts)
POSTGRES_EXTERNAL_PORT=5432
REDIS_EXTERNAL_PORT=6379

# Path Configuration
DATA_PATH=./postgres-data
DUMP_PATH=./dbdump
LOG_PATH=./logs
SECRETS_PATH=./local/secrets

# MusicBrainz Configuration
MUSICBRAINZ_BASE_DOWNLOAD_URL=https://data.metabrainz.org/pub/musicbrainz

# Redis Configuration
REDIS_SERVER=redis
REDIS_PORT=6379

# Replication Configuration (set by setup script)
REPLICATION_TYPE=RT_MIRROR
REPLICATION_ACCESS_TOKEN=

# Environment (production, test, dev)
ENVIRONMENT=production
